<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!--header part-->
    <div id="header">
        <div id="nav">

        </div>
    </div>
    <!--maincontent-->
    <div id="maincontent">
        @RenderBody()
    </div>
    <!--footer-->
    <div id="footer">
            
    </div>
    <!--这里再加载jquery脚本-->
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
