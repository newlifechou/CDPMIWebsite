@model MvcApplication_CDPMI.Models.news

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>news</legend>

        @Html.HiddenFor(model => model.newsID)

        <div class="editor-label">
            @Html.LabelFor(model => model.newsTitle)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.newsTitle)
            @Html.ValidationMessageFor(model => model.newsTitle)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.publishTime)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.publishTime)
            @Html.ValidationMessageFor(model => model.publishTime)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.readCount)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.readCount)
            @Html.ValidationMessageFor(model => model.readCount)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.contentText)
        </div>
        <div class="editor-field">
            <script>
                var ue = UE.getEditor('contentText');
            </script>
            @Html.TextAreaFor(model => model.contentText)
            @Html.ValidationMessageFor(model => model.contentText)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("返回列表", "Index")
</div>
