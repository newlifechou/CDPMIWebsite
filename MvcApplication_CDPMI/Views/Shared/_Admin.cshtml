@{
    ViewBag.Title = "管理界面";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section AddToHead{
    @* 这里添加的是后台界面要用到的ueditor编辑器的js引用 *@
    @* 所有的后台页面都通用 *@
    <script src="~/ueditor/ueditor.config.js"></script>
    <script src="~/ueditor/ueditor.all.min.js"></script>
    <script src="~/ueditor/lang/zh-cn/zh-cn.js"></script>
    <script src="~/ueditor/ueditor.parse.min.js"></script>
}
<div class="float-left">
    @* 以下是管理界面的菜单 *@
    <div class="left-menu">
        <h5>基本信息</h5>
        <ul>
            <li>@Html.ActionLink("公司简介", "Basic", "Admin")</li>
            <li>@Html.ActionLink("荣誉资质", "OtherBasics", "Admin", new { id = 3 }, null)</li>
            <li>@Html.ActionLink("技术专家", "OtherBasics", "Admin", new { id = 2 }, null)</li>
            <li>@Html.ActionLink("发展历程", "OtherBasics", "Admin", new { id = 4 }, null)</li>
        </ul>
    </div>
    <div class="left-menu">
        <h5>产品服务</h5>
        <ul>
            <li>@Html.ActionLink("产品编辑", "Index", "Product")</li>
            <li>@Html.ActionLink("类别编辑", "Index", "ProductCategory")</li>
            <li>@Html.ActionLink("服务编辑", "Index", "Service")</li>
            <li>@Html.ActionLink("新闻编辑", "Index", "News")</li>
            <li>@Html.ActionLink("留言查看", "Index", "FeedBack")</li>
        </ul>
    </div>
    <div class="left-menu">
        <h5>其他</h5>
        <ul>
            <li>@Html.ActionLink("退出登录", "LogOffGet", "Account")</li>
        </ul>
    </div>
</div>
<div class="float-left right-content">
    @* 这里处理每个编辑页面的渲染 *@
    @RenderBody()
</div>
