<!DOCTYPE html>
<html lang="zh">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title - 成都先锋材料有限公司</title>
    @* 更改网页图标 *@
    <link href="~/Images/cdpmi/icon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @* 这里设置一个Section，用来给后面的 *@
    @if (IsSectionDefined("AddToHead"))
    {
        @RenderSection("AddToHead", required: false)
    }
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                @* 这里原来的文字标题也注释掉，用图片来代替 *@
                @*<p class="site-title">@Html.ActionLink("成都先锋材料有限公司", "Index", "Home")</p>*@
                <img id="logo" src="~/Images/cdpmi/logo.jpg" alt="成都先锋材料有限公司" />
            </div>
            <div class="float-right">
                <section id="login">
                    @* 这里暂时将登陆部分隐藏掉，以后再启用 *@
                    @Html.Partial("_LoginPartial")
                </section>
            </div>
        </div>
        <div id="nav">
            <div>
                <ul id="menu">
                    <li>@Html.ActionLink("主页", "Index", "Home")</li>
                    <li>@Html.ActionLink("产品信息", "Product", "Home", new { id = 0 }, null)</li>
                    <li>@Html.ActionLink("服务信息", "Service", "Home")</li>
                    <li>@Html.ActionLink("行业动态", "News", "Home")</li>
                    <li>@Html.ActionLink("关于我们", "About", "Home", new { id = 1 }, null)</li>
                    <li>@Html.ActionLink("联系方式", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - 成都先锋材料有限公司 版本所有 <span>Designed by xs.zhou</span></p>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
