@{
    ViewBag.Title = "主页";
}
@* 添加主页的特有的CSS *@
@section AddToHead{
<link href="~/Content/homeIndex.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/js/MainSlider.js"></script>
}


@section featured {
    <section class="featured">
        <div id="ad">
            @* 这是幻灯广告的图片部分 *@
            <ul class="slider">
                <li><img src="~/Images/cdpmi/slider1.jpg" /></li>
                <li><img src="~/Images/cdpmi/slider2.jpg" /></li>
                <li><img src="~/Images/cdpmi/slider3.jpg" /></li>
                <li><img src="~/Images/cdpmi/slider4.jpg" /></li>
            </ul>
            @* 这是幻灯广告的数字组 *@
            <ul class="num">
                <li class="selected">1</li>
                <li>2</li>
                <li>3</li>
                <li>4</li>
            </ul>
        </div>
    </section>
}
<h3>先锋材料(Pioneer Materials)</h3>
